<UserControl
    x:Class="StoryCanvas.UWP.View.Control.EditRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StoryCanvas.UWP.View.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="EditRowSelf">

    <Grid Margin="0,0,0,8" Visibility="{Binding Visibility,ElementName=EditRowSelf}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding RowName,ElementName=EditRowSelf}" VerticalAlignment="Center"/>

        <Border Grid.Column="1" Child="{Binding EditColumn,ElementName=EditRowSelf}"/>
    </Grid>
</UserControl>
