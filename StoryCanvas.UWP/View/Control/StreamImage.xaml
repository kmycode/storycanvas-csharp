<UserControl
    x:Class="StoryCanvas.UWP.View.Control.StreamImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StoryCanvas.UWP.View.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" x:Name="StreamImageSelf">

    <Grid>
        <Image x:Name="Image"
               Width="{Binding Width,ElementName=StreamImageSelf}"
               Height="{Binding Height,ElementName=StreamImageSelf}"
               Stretch="{Binding Stretch,ElementName=StreamImageSelf}"/>
    </Grid>
</UserControl>
